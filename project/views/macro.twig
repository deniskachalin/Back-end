
{% macro btn(text, url, is_active) %}
        <a class="{{is_active ? "btn-primary" : "btn-link" }}" href="{{url}}">{{text}}</a>
{% endmacro %}

{% macro btnNav(text, url, is_active) %}
        <a class="btn {{is_active ? "btn-primary" : "btn-link" }} d-flex align-items-center justify-content-center" href="{{url}}" style="height: 50px;">{{text}}</a>
{% endmacro %}

{% macro btnMenu(text, url, is_active) %}
        <a class="btn m-2 {{is_active ? "btn-primary" : "btn-link" }}" href="{{url}}" >{{text}}</a>
{% endmacro %}

{% macro image(url, alt) %}
        <img src="{{url}}" alt="{{alt}}" class="figure-img img-fluid rounded" style="max-width: 180px; min-width: 180px" >
{% endmacro %}