{% import "macro.twig" as macros %}
{% set url = "/games/"~ item.id %}
<li class="list-group-item m-2" style="text-align: center; width: 220px;">
	<div class="position-absolute" style="right: 4px; top: 4px">
		<form action="/games/delete" method="POST" >
      <input type="hidden" name="id" value="{{item.id}}">
      <button type="submit" class="btn btn-danger" style="width: 2.6em;">
				<i class="fas fa-times"></i>
			</button>
		</form>
    <form action="/games/{{item.id}}/edit" method="GET">
      <input type="hidden" name="id" value="{{item.id}}">
      <button type="submit" class="btn btn-warning" >
				<i class="fas fa-cog"></i>
			</button>
    </form>
	</div>
